=form_tag start_plant_purchase_path(plant, sale.key) do
	%legend Purchase order header
	%fieldset
		%h2 content coming soon!
	%fieldset.form-actions
		=submit_tag "New Purchase order"

-unless params[:id].nil?
	%h5= "id: " + params[:id] 
	%dl
	-purchase.serialize.each do |key, val|
		%dt= key
		%dd= val


	=form_tag material_plant_purchase_path(plant, purchase.key) do
		%legend Purchase order materials
		%fieldset
			=label_tag "material_name", "Material Name"
			=text_field_tag "material[name]"
			=label_tag "material_quantity", "Amount"
			=number_field_tag "material[quantity]"
			=label_tag "material_units", 'Units'
			=select_tag "material[units]", options_for_select(['pounds','tons','metric tons'])
			=label_tag "material_price", "Price"
			=number_field_tag "material[price]"
		%fieldset.form-actions
			=submit_tag "add material"

	=form_tag finish_plant_purchase_path(plant, purchase.key) do
		%legend Purchase order finish
		%fieldset
			=label_tag "company", "Company"
			=text_field_tag "company"
		%fieldset.form-actions
			=submit_tag "finalize form"
