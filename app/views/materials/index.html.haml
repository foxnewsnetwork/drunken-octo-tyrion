%section.container-fluid
	.row-fluid
		.span12
			=form_tag plant_materials_path(plant), :method => :get do
				%legend Filter by date
				%fieldset
					=label_tag "start_date", "Start Date"
					=select_date starting, :prefix => :start, :start_year => 1900, :end_year => DateTime.now.year
					=label_tag "end_date", "End Date"
					=select_date ending, :prefix => :end, :start_year => 1900, :end_year => DateTime.now.year
				.form-actions
					=submit_tag "Search"
	.row-fluid	
		.span12
			%legend= plant.name + " Materials"
	.row-fluid
		.span6
			%legend= t :sales, :scope => [:material, :view, :index]
			%ul
				-sales.each do |name, amount|
					%li
						%dl
							%dt= name
							%dd= amount
		.span6
			%legend= t :purchases, :scope => [:material, :view, :index]
			%ul
				-purchases.each do |name, amount|
					%li
						%dl
							%dt= name
							%dd= amount